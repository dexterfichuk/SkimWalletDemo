<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center">

    <TextView
        android:text="@string/enter_pin_code"
        android:id="@+id/pin_input_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:padding="10sp"
        android:gravity="center" />

    <EditText
        android:id="@+id/pin_entry_hidden_focus"
        android:textSize="1sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberPassword"
        android:maxLength="4"
        android:layout_gravity="center"
        android:background="@null"
        android:textColor="@null" />

    <LinearLayout
        android:id="@+id/pin_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/digit0"
            android:layout_width="50sp"
            android:layout_height="wrap_content"
            android:textSize="34sp"
            android:textStyle="bold"
            android:gravity="center"
            android:maxLength="1"
            android:nextFocusForward="@+id/digit1"
            android:background="@android:color/white" />

        <TextView
            android:id="@+id/digit1"
            android:layout_width="50sp"
            android:layout_height="wrap_content"
            android:textSize="34sp"
            android:textStyle="bold"
            android:gravity="center"
            android:maxLength="1"
            android:nextFocusForward="@+id/digit2"
            android:layout_marginLeft="4dp"
            android:background="@android:color/white" />

        <TextView
            android:id="@+id/digit2"
            android:layout_width="50sp"
            android:layout_height="wrap_content"
            android:textSize="34sp"
            android:textStyle="bold"
            android:gravity="center"
            android:maxLength="1"
            android:nextFocusForward="@+id/digit3"
            android:layout_marginLeft="4dp"
            android:background="@android:color/white" />

        <TextView
            android:id="@+id/digit3"
            android:layout_width="50sp"
            android:layout_height="wrap_content"
            android:textSize="34sp"
            android:textStyle="bold"
            android:gravity="center"
            android:maxLength="1"
            android:layout_marginLeft="4dp"
            android:background="@android:color/white" />

    </LinearLayout>

    <Button
        android:id="@+id/pin_cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cancel_button_text"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp" />

</LinearLayout>